<div class="container">
	  	<div class="col-md-4">
	 		<%= image_tag("web_logo.png", :alt => "Vault Logo") %>
		</div>
		<div class="col-md-4 text-center">
	 		<h1>Welcome to Vault Tax Service</h1>
		</div>
		<div class="col-md-4 text-center">
			<button type="login" class="btn btn-primary">Log in</button>
			<p>New user? <%= link_to "Sign up now!", root_path %></p>
	 		<h3><%= icon('phone') %> Call us at (786) 422-5015</h3>
		</div>
	</div>
	<div class="navbar navbar-default navbar-static-top">
	    <div class="container">
	      <div class="navbar-header">
	        <%= link_to 'Vault Tax Service', root_path, class: 'navbar-brand' %>
	      </div>

	      <ul class="nav navbar-nav navbar">
	        <li><%= link_to t('menu.new_article'), new_article_path %></li>
	      </ul>
	      <ul class="nav navbar-nav navbar-right">
      		<li class="dropdown">
        		<a class="dropdown-toggle" data-toggle="dropdown" href="#">
          		<%= t('menu.languages.lang') %>
          	<span class="caret"></span>
        		</a>
        		<ul class="dropdown-menu" role="menu">
          			<li>
            			<%= link_to t('menu.languages.en'), change_locale_path(:en) %>
          			</li>
          			<li>
            			<%= link_to t('menu.languages.es'), change_locale_path(:es) %>
          			</li>
        		</ul>
      		</li>
    	  </ul>


	    </div>
	  </div>

	  <div class="container">
	    <% flash.each do |key, value| %>
	      <div class="alert alert-<%= key %>">
	        <%= value %>
	      </div>
	    <% end %>

	    <div class="page-header">
	      <h1><%= yield :page_header %></h1>
	    </div>

	    <%= yield %>
	  </div>